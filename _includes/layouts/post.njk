---
layout: layouts/base.njk
---

<article>
	<header class="my-16">
		<h1>
		{% if title %}
		{{ title }}
		{% else %}
		{{ page.url }}
		{% endif %}
		</h1>

		<div class="text-sm text-gray-500">
			{% if description %}
			{{ description }}<br/>
			{% endif %}

			Updated <date>{{ page.date | readableDate }}</date>

			{% if tags %}
			&nbsp;&middot;&nbsp;
			<ul class="inline">
			{% for tag in tags %}
			  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
			  <li class="inline"><a class="text-current" href="{{ tagUrl | url }}">#{{ tag }}</a></li>
			{% endfor %}
			</ul>
			{% endif %}
		</div>

	</header>

	{{ content | safe }}
</article>