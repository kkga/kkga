<ul class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 list-none m-0">
{% for item in list | reverse %}
    {% if item.url != page.url %}
    <li>
		<a class="inline-block text-current" href="{{ item.url | url }}">
			<h3 class="text-base my-0">
			{% if item.data.title %}{{ item.data.title }}
			{% elseif item.url %}{{ item.url }}
			{% else %}{{ item }}
			{% endif %}
			</h3>
		</a>
		<div class="text-sm text-gray-600">
			{% if item.data.description %}
			{{ item.data.description }}
			{% endif %}
		</div>
		{% if item.date %}
		<div class="text-sm text-gray-400">
			<time datetime="{{ item.date | htmlDateString }}">{{ item.date | readableDate }}</time>
        </div>
		{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
