<% layout('./base') %>

<%if (it.page?.content) { %>
<article>
  <%~ it.page?.content %>
</article>
<% } %>

<nav>
  <% if (it.indexLinks?.length > 0) { %>
  <%~ includeFile('./pagelist', {
    links: it.indexLinks,
    title: "Index"
  }) %>
  <% } %>

  <% if (it.childTags?.length > 0) { %>
  <%~ includeFile('./taglist', {
    tags: it.childTags,
    title: "Tag index"
  }) %>
  <% } %>

  <% if (it.backLinks?.length > 0) { %>
  <%~ includeFile('./pagelist', {
    links: it.backLinks,
    title: "Backlinks"
  }) %>
  <% } %>

  <% it.taggedIndexLinks && Object.keys(it.taggedIndexLinks).forEach((tag) => { %>
  <%~ includeFile('./pagelist', {
    links: it.taggedIndexLinks[tag],
    title: `Tagged #${tag}`,
    rootUrl: `/tag/${tag}`
  }) %>
  <% }) %>
</nav>
