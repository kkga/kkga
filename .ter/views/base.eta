<!DOCTYPE html>
<%
const {
  breadcrumbs, childPages, childTags, backlinkPages, pagesByTag,
  toc, indexLayout, page, site, includeRefresh
} = it;

const { title, description, date, tags, headings, html } = page;
const filteredHeadings = headings && headings.filter(h => h.level >= 2 && h.level <= 5)
const dateOpts = { year: 'numeric', month: 'short', day: 'numeric' };
%>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title !== site.title ? `${title} · ${site.title}` : site.title %></title>
    <meta name="description" content="<%= description ?? site.description %>">
    <link rel="stylesheet" href="/ter.css">
    <link rel="stylesheet" href="/hljs.css">
    <link rel="icon" href="data:;base64,iVBORw0KGgo=" />
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="<%= title ?? site.title %>">
    <meta name="twitter:description" content="<%= description ?? site.description %>">
    <meta property="og:type" content="article">
    <meta property="og:title" content="<%= title ?? site.title %>">
    <meta property="og:description" content="<%= description ?? site.description %>">
    <meta property="og:url" content="<%= site.url %>">
    <%~ include("head") %>
  </head>

  <body>
    <% if (includeRefresh) { %>
    <script>
      ((l) => {
        let w, i;

        function d(m) { console.info("[refresh] ", m); }
        function r() { l.reload(); }

        function s(f) {
          w && w.close();
          w = new WebSocket(`${l.origin.replace("http", "ws")}/refresh`);
          w.addEventListener("open", f);
          w.addEventListener("message", () => {
            d("reloading...");
            r();
          });
          w.addEventListener("close", () => {
            d("connection lost - reconnecting...");
            clearTimeout(i);
            i = setTimeout(() => s(r), 1000);
          });
        }

        s();
      })(location);
    </script>
    <% } %>

    <header>
      <% if (breadcrumbs) { %>
      <nav aria-label="breadcrumbs">
        <ol>
          <% breadcrumbs.forEach((crumb) => { %>
            <li>
              <% if (crumb.url !== "") { %>
              <a href="<%= crumb.url %>"><%= crumb.slug %></a>
              <% } else { %>
              <%= crumb.slug %>
              <% } %>
            </li>
          <% }) %>
        </ol>
      </nav>
      <% } %>
      <% if (date || (tags && tags.length > 0)) { %>
      <div style="display: flex; gap: 0.5em">
        <% if (date) { %>
        <time datetime="<%= date %>"><%= date.toLocaleDateString(undefined, dateOpts) %></time>
        <% } %>
        <% if (tags && tags.length > 0 ) { %>
        <% if (date && (tags && tags.length > 0)) { %>
        &middot;
        <% } %>
        <ul>
          <% tags.forEach((tag) => { %>
          <li><a href="<%= `/tag/${tag}` %>">#<%~ tag %></a></li>
          <% }) %>
        </ul>
        <% } %>
      </div>
      <% } %>
      <% if (description) { %>
      <div><%= description %></div>
      <% } %>
    </header>

    <main>
      <% if (toc && filteredHeadings?.length > 0) { %>
      <details style="margin-bottom: 2rem">
        <summary>Contents</summary>
        <ul style="list-style: none; padding: 0">
          <% filteredHeadings.forEach((heading) => { %>
          <li>
            <% for (let lvl = 2; lvl < heading.level; lvl++) { %>
            &nbsp;&nbsp;
            <% } %>
            <a href="#<%= heading.slug %>"><%_= heading.text _%></a>
          </li>
          <% }) %>
        </ul>
      </details>
      <% } %>

      <% if (html) { %>
      <article>
        <%~ html %>
      </article>
      <% } %>

      <% if (indexLayout === "log") {
        childPages.forEach((page, index) => { const {title, description, date, tags, html, url} = page %>
      <article>
        <header>
          <h2><a href="<%= url.pathname %>"><%~ title %></a></h2>
          <% if (date || (tags && tags.length > 0)) { %>
          <div style="display: flex; gap: 0.5em">
            <time datetime="<%= date %>"><%= date.toLocaleDateString(undefined, dateOpts) %></time>
            <% if (tags && tags.length > 0 ) { %>
            <% if (date && (tags && tags.length > 0)) { %>
            &middot;
            <% } %>
            <ul>
              <% tags.forEach((tag) => { %>
              <li><a href="<%= `/tag/${tag}` %>">#<%~ tag %></a></li>
              <% }) %>
            </ul>
            <% } %>
          </div>
          <% } %>
          <% if (description) { %>
          <div><%= description %></div>
          <% } %>
        </header>
        <%~ html %>
      </article>

      <% if (index < childPages.length - 1) { %>
      <hr />
      <% } %>

      <% }) %>
      <% } %>

    </main>

    <aside>
      <% if (childPages?.length > 0) { %>
      <section>
        <h6>Child pages</h6>
        <ul>
          <% childPages.forEach((page) => {
            const {isIndex, url, description, title, date } = page;
            const pinned = page?.attrs?.pinned
            %>
          <li>
            <a style="<%_= isIndex ? 'font-weight: var(--font-weight-b)' : '' %> " href="<%= url.pathname %>">
              <%= title %>
            </a>
            <% if (isIndex) { %>/ ..<% } %>
            <% if (pinned) { %> ☆<% } %>
            <span></span>
            <% if (date) { %>
              <time datetime="<%= date %>"><%= date.toLocaleDateString() %></time>
            <% } %>
          </li>
          <% }) %>
        </ul>
      </section>
      <% } %>

      <% if (childTags?.length > 0) { %>
      <section>
        <h6>Child tags</h6>
        <ul>
          <% childTags.forEach((tag) => { %> <li style="display:inline-block; margin-right: 0.5ch;"><a href="<%= `/tag/${tag}` %>">#<%_= tag _%></a></li><% }) %>
        </ul>
      </section>
      <% } %>

      <% if (backlinkPages?.length > 0) { %>
      <section>
        <h6>Backlinks</h6>
        <ul>
          <% backlinkPages.forEach((page) => {
            const {pinned, isIndex, url, description, title, date } = page; %>
          <li>
            <a href="<%= url.pathname %>"><%= title %></a>
            <span></span>
            <% if (date) { %>
            <% } %>
          </li>
          <% }) %>
        </ul>
      </section>
      <% } %>

      <% pagesByTag && Object.keys(pagesByTag).forEach((tag) => { %>
      <section>
        <h6><a href=<%= `/tag/${tag}` %>><%= `Also tagged #${tag}` %></a></h6>
        <ul>
          <% pagesByTag[tag].forEach((page) => {
            const {isIndex, url, title, date } = page; %>
          <li>
            <a href="<%= url.pathname %>"><%= title %></a>
            <span></span>
            <% if (date) { %>
              <time datetime="<%= date %>"><%= date.toLocaleDateString() %></time>
            <% } %>
          </li>
          <% }) %>
        </ul>
      </section>
      <% }) %>
    </aside>

    <footer>Made with <a href="https://github.com/kkga/ter">Ter</a>.</footer>

  </body>
</html>
