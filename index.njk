{% extends "_includes/layouts/base.njk" %}

{% block header %}
<h1 class="text-base my-0">Gadzhi Kharkharov</h1>
Software designer. Based in Moscow, Russia.<br />
<a href="/about">More about me</a>.
{% endblock %}

{% block content %}
<div class="grid grid-cols-1 gap-8 sm:grid-cols-2">
	<div>
		<h2 class="my-2 text-gray-500 text-sm uppercase tracking-wide">Projects</h2>
		{% set list = collections.projects | head(-6) %}
		{% include "listing.njk" %}
	</div>

	<div>
		<h2 class="my-2 text-gray-500 text-sm uppercase tracking-wide">Work</h2>
		{% set list = collections.work | head(-6) %}
		{% include "listing.njk" %}
	</div>

	<div>
		<h2 class="my-2 text-gray-500 text-sm uppercase tracking-wide ">Notes</h2>
		{% set list = collections.notes | head(-6) %}
		{% set length = collections.notes | length %}
		{% include "listing.njk" %}
		<a class="text-sm" href="/tags/note">See all {{length}} notes &rarr;</a>
	</div>

	<div>
		<h2 class="my-2 text-gray-500 text-sm uppercase tracking-wide">Dlog</h2>
		{% set list = collections.dlog | head(-6) %}
		{% set length = collections.notes | length %}
		{% include "listing.njk" %}
		<a class="text-sm" href="/tags/dlog">See all {{length}} dlog entries &rarr;</a>
	</div>
</div>
{% endblock %}
