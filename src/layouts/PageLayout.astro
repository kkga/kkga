    <header class="col-[breakout] grid grid-cols-subgrid">
      <span>
        {
          pathname !== "/" && (
            <>
              <a
                class="mb-4 inline-block place-self-start uppercase hover:underline"
                href="/"
              >
                kkga
              </a>
              <span class="mx-1 inline-block text-current">â€º</span>
            </>
          )
        }

        <h1 class="inline-block">
          {title ?? frontmatter?.title}
