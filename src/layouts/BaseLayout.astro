---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.jsx";
import Texture from "../components/Texture.jsx";
import metadata from "../data/metadata.json";

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="min-h-screen bg-gray-100 dark:bg-gray-900">
  <head>
    <BaseHead {title} {description} />
  </head>

  <body class="relative min-h-screen flex flex-col text-sm">
    <slot name="header" />

    <main
      class="grid grid-cols-main flex-1 px-4 py-8 sm:px-6 sm:py-12 lg:py-16"
    >
      <slot />
    </main>

    <Footer>
      <slot name="footer" />
    </Footer>
  </body>
</html>
