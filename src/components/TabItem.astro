---
export interface Props {
  title: string;
}

const { title = "title" } = Astro.props;
---

<button
  slot="tab"
  class="flex h-5 items-center leading-none whitespace-nowrap text-secondary underline-offset-2 not-last-of-type:mr-2.5 hover:text-primary aria-selected:bg-highlight aria-selected:text-primary"
>
  {title}
</button>

<div slot="panel" class="mt-5">
  <slot />
</div>
