---
import siteData from "../data/site.json";
import contacts from "../data/contacts.json";

const { title, description } = Astro.props;
const { pathname } = Astro.url;
const isHome = pathname === "/";
---

<header class="grid grid-cols-main gap-5 border-b border-line bg-panel p-5">
  {
    !isHome ? (
      <>
        <a
          class="col-[head] place-self-start uppercase not-hover:no-underline"
          href="/"
        >
          {siteData.title}
        </a>
        <h1 class="col-[content]">{title}</h1>
        <p class="col-[aside] text-secondary">{description}</p>
      </>
    ) : (
      <>
        <h1 class="col-[head] place-self-start">{title}</h1>

        <p class="col-span-2">
          Software designer focused on creating better tools for builders.
          <br /> Passionate about systems thinking and crafting intuitive,
          efficient interfaces.
        </p>

        <p class="col-span-2">
          Apart from work, I'm usually building side projects, diving into
          emerging tech, cycling up hills, hiking trails, or chasing mastery in
          FromSoftware games.
        </p>

        <div class="col-span-2 col-start-[content-start] grid grid-cols-subgrid gap-5 md:col-start-[aside-start] lg:col-start-6">
          <ul class="list-none [&_a]:not-hover:text-secondary">
            <li>
              <a href="/notes">/notes</a>
            </li>
            <li>
              <a href="/books">/books</a>
            </li>
            <li>
              <a href="/dlog">/dlog</a>
            </li>
          </ul>
          <ul class="col-auto list-none md:col-start-3 lg:col-auto [&_a]:not-hover:text-secondary">
            <li>
              <a href={contacts["email"]}>me@kkga.me</a>
            </li>
            <li>
              <a href={contacts["twitter"]} target="_blank" rel="me">
                twitter
              </a>
            </li>
            <li>
              <a href={contacts["bluesky"]} target="_blank" rel="me">
                bluesky
              </a>
            </li>
          </ul>
        </div>
      </>
    )
  }
</header>
