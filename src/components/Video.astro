---
interface Props {
  src: string;
  poster?: string;
  autoplay?: boolean;
  controls?: boolean;
  loop?: boolean;
  className: string;
}

const {
  src,
  poster,
  className,
  autoplay = true,
  controls = false,
  loop = true,
} = Astro.props;
---

<video
  playsinline
  autoplay={autoplay}
  controls={controls}
  loop={loop}
  muted
  poster={poster}
  class={`w-full bg-panel ${className || ""}`}
>
  <source src={src} />
</video>
